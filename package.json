{
  "private": true,
  "engines": {
    "node": "^16.14",
    "npm": "^8.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@emotion/react": "^11.8.2",
    "motion": "^10.6.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@nrwl/cli": "^13.8.8",
    "@nrwl/tao": "^13.8.8",
    "@nrwl/workspace": "^13.8.8",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "all-contributors-cli": "^6.20.0",
    "auto-changelog": "^2.3.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.30.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^4.1.0",
    "glob": "^7.1.7",
    "husky": "^7.0.1",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "markdownlint": "^0.23.1",
    "markdownlint-cli": "^0.27.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.2.8",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.3.5",
    "webpack": "^5.45.1",
    "webpack-cli": "^4.7.2"
  },
  "scripts": {
    "postinstall": "husky install",
    "lint": "npm run lint-js && npm run lint-md",
    "lint-js": "eslint .",
    "lint-js-fix": "eslint . --fix",
    "lint-md": "markdownlint .",
    "lint-md-fix": "markdownlint . --fix",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-coverage": "jest --coverage",
    "test-list": "jest --listTests",
    "integration": "sh ./scripts/integration.sh",
    "release": "nx run-many --target=build --all && npm run lint && npm run test && lerna publish",
    "changelog": "auto-changelog",
    "contributors-add": "all-contributors add",
    "readme-contributors-generate": "all-contributors generate",
    "readme-community-generate": "node ./scripts/readme-community-generate.js",
    "deploy": "sh ./scripts/deploy.sh"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "auto-changelog": {
    "handlebarsSetup": "./website/src/templates/changelog-setup.js",
    "template": "./website/src/templates/changelog.hbs",
    "output": "./website/src/pages/project/changelog.mdx",
    "commitLimit": false,
    "replaceText": {
      "#(\\d+)": "[`#$1`](https://github.com/arwes/arwes/issues/$1)"
    }
  }
}
